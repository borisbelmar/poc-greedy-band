{
  "extends": [
    "next/core-web-vitals",
    "standard",
    "standard-with-typescript"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "ignorePatterns": [
    "node_modules/*",
    ".next/*",
    ".out/*",
    "next-env.d.ts"
  ],
  "rules": {
    "indent": ["error", 2],
    "react/jsx-indent": ["error", 2],
    "react/jsx-indent-props": ["error", 2]
  }
}
